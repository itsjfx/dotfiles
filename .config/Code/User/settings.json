{
    "diffEditor.ignoreTrimWhitespace": false,
    // "editor.renderWhitespace": "trailing",
    "cSpell.enabledLanguageIds": [
        "git-commit",
        "latex",
        "markdown",
        "plaintext",
        "restructuredtext",
        "scss",
        "text"
    ],
    "cSpell.userWords": [
        "behaviour"
    ],
    "cSpell.language": "en-GB",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "extensions.ignoreRecommendations": true,
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#bf6a8a"
    },
    "python.showStartPage": false,
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "editor.minimap.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "files.insertFinalNewline": true,
    "editor.guides.bracketPairs": true,
    "telemetry.telemetryLevel": "off",
    // run in own thread
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1,
        "asvetliakov.vscode-neovim": 1
    },
    "javascript.updateImportsOnFileMove.enabled": "always",
    // ty https://mike.bailey.net.au/notes/vscode/#file-watchers
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true
    },
    "files.trimTrailingWhitespace": true,
    "[markdown]": {
        "files.trimTrailingWhitespace": false,
        "editor.autoClosingQuotes": "never",
    },
    "markdown.editor.pasteUrlAsFormattedLink.enabled": "always",
    "workbench.startupEditor": "none",
    // "typescript.updateImportsOnFileMove.enabled": "always",
    "zenMode.hideLineNumbers": false,
    "zenMode.fullScreen": false,
    // Custom tags for the parser to use
    "yaml.customTags": [
        "!And",
        "!If",
        "!Not",
        "!Equals",
        "!Or",
        "!FindInMap sequence",
        "!Base64",
        "!Cidr",
        "!Ref",
        "!Sub",
        "!GetAtt",
        "!GetAZs",
        "!ImportValue",
        "!Select",
        "!Select sequence",
        "!Split",
        "!Join sequence"
    ],
    "vim.handleKeys": {
        "<C-a>": false, // CTRL + a - select all
        "<C-w>": false, // CTRL + w - close windows
        "<C-p>": false // CTRL + p - file finder
    },
    "vim.enableNeovim": true,
    // "vim.neovimUseConfigFile": true,
    // vim-like
    "editor.wordWrap": "on",
    "editor.cursorSurroundingLines": 10,
    // treesitter-context like
    "editor.stickyScroll.enabled": true,
    "notebook.stickyScroll.enabled": true,

    "workbench.iconTheme": "material-icon-theme",

    "workbench.editor.wrapTabs": true,
    // eff off
    "typescript.surveys.enabled": false,

    // playwright
    "playwright.reuseBrowser": true,

    // Black
    // "[python]": {
    //     "editor.defaultFormatter": "ms-python.black-formatter"
    // },
    // "black-formatter.args": ["--skip-string-normalization"],
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "info",
    ],
    // official Dracula has weird colouring on nav
    "workbench.colorTheme": "Dracula Refined",

    "[python]": {
        "editor.defaultFormatter": "eeyore.yapf"
    },
    "yapf.args": ["--style", "{based_on_style: pep8, CONTINUATION_ALIGN_STYLE: FIXED, DEDENT_CLOSING_BRACKETS: True, COLUMN_LIMIT: 110, BLANK_LINES_AROUND_TOP_LEVEL_DEFINITION: 1, SPLIT_ALL_TOP_LEVEL_COMMA_SEPARATED_VALUES: True, DISABLE_ENDING_COMMA_HEURISTIC: False}"]
}
