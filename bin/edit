#!/usr/bin/env bash

set -eu -o pipefail

cmd="$(basename "$0")"
_sudo=0
case "$cmd" in
    sudoedit) _sudo=1 ;;
    edit) ;;
    *) echo "Unknown command $cmd" >&2; exit 1 ;;
esac

file="$1"
shift

if [[ "$file" = *.* ]]; then
    suffix="${file##*.}"
    tmpfile="$(mktemp --suffix=".$suffix")"
else
    tmpfile="$(mktemp)"
fi
trap 'rm -- "$tmpfile"' EXIT
if [ -f "$file" ]; then
    data="$(cat "$file")"
    echo "$data">"$tmpfile"
else
    data=""
fi
"${EDITOR:-vi}" "$tmpfile" "$@"

if diff -q "$file" "$tmpfile"; then
    echo 'File not modified' >&2
    exit 1
fi

diff="$(git config --get interactive.diffFilter)"

<<<"$data" $diff - "$tmpfile" || true

read -p 'Do you want to save the changes? [y/n] ' response
if [[ "$response" =~ ^[Yy]$ ]]; then
    cmd="cat $tmpfile >$file"
    if (( _sudo )); then
        sudo sh -c "$cmd"
    else
        sh -c "$cmd"
    fi
    echo "Changes saved" >&2
else
    echo "Changes discarded" >&2
fi
